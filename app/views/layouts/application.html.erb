<!DOCTYPE html>
<html>
<head>
  <title>Foro</title>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="navbar-header">
            <img class="img-brand" src="/assets/logo.png"/>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
            </ul>
            <% if user_signed_in? %>
                <ul class="nav navbar-nav navbar-right">
                    <li><a><span class="glyphicon glyphicon-user"></span><%= current_user.email %></a></li>
                    <li><a href="/users/sign_out" data-method="delete" id="logout"><span class="glyphicon glyphicon-log-in"></span>Salir</a>

</li>
                </ul>
            <% end %>
        </div>
    </nav>
    <div class="container" ng-view>
        <%= yield %>
        <br>
    </div>

    <footer class="footer">
        <div class="container">
          <p>RoR 2021</p>
        </div>
    </footer>


  <!-- Modal -->
  <div class="modal" id="myModal" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Mensaje</h4>
        </div>
        <div class="modal-body">
          <p>Esta saliendo del sistema</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
      
    </div>
  </div>


</body>
</html>
